<odoo>
  <data>
<!-- # Lead-->
    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <button name="action_schedule_meeting" position="after">
                        <button class="oe_stat_button" type="object"  attrs="{'invisible': [('type', '=', 'opportunity')]}" 
                            name="action_schedule_meeting" icon="fa-calendar" groups="bissweb.group_crm_user">
                                <div class="o_stat_info">
                                    <field name="meeting_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Đặt lịch</span>
                                </div>
                        </button>
            </button>
        </field> 
    </record>


     <!-- Calendar Events : Views and Actions  -->
      <record id="view_calendar_event_tree_lead" model="ir.ui.view">
        <field name="name">calendar.event.tree.calendar.lead</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
              <field name="lead_id" optional="show" readonly="1"/>
            </xpath>
        </field>
      </record>

         <!-- Calendar Events : Views and Actions  -->
      <record id="view_calendar_event_form_lead" model="ir.ui.view">
        <field name="name">calendar.event.form.lead</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='start_date']" position="before">
              <field name="lead_id" readonly="1"/>
            </xpath>
        </field>
      </record>


       <record id="view_calendar_event_calendar_lead" model="ir.ui.view">
        <field name="name">calendar.event.calendar.lead</field>
        <field name="model">calendar.event</field>
        <field name="priority" eval="2"/>
        <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
        <field name="arch" type="xml">
         <xpath expr="//field[@name='description']" position="before">
              <field name="lead_id" readonly="1"/>
            </xpath>

        </field>
    </record>

  </data>
</odoo>
