   <!-- actions opening views on models -->
   
    <record model="ir.actions.act_window" id="bissweb.dataclose_action_window">
        <field name="name">Khách hàng tiềm năng(Lead)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">tree,kanban,graph,pivot,calendar,form,activity</field>
        <field name="domain">[('type','=','lead'),('user_id','!=',False)]</field>
        <field name="context">{
                'default_type': 'lead',
                'search_default_type': 'lead',
                'mass_editing_enable': True
            }</field>
        <field name="search_view_id" ref="bissweb.crm_search_view_lead_inherit"/>
    </record>

    <record id="dataclose_action_view_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="dataclose_view_tree"/>
            <field name="act_window_id" ref="bissweb.dataclose_action_window"/>
    </record>

