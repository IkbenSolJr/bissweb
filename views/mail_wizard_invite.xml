<odoo>
    <record id="view_mail_wizard_invite_form" model="ir.ui.view">
        <field name="name">mail.wizard.invite.form</field>
        <field name="model">mail.wizard.invite</field>
        <field name="arch" type="xml">
            <form string="Mail Wizard Invite">
                <sheet>
                    <group>
                        <!-- Hide the 'send_mail' field if it is False or based on condition -->
                        <field name="send_mail" attrs="{'invisible': [('send_mail', '=', False)]}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>